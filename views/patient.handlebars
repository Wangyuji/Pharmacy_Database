<form action="submit" id="insert_patient_form">
  <legend class="">Add Patients</legend>
  <div class="form-group row">
    <label for="add_patient_btn" class="col-form-label">Last Name</label>
    <div class="col-2">
        <input type="text" id="add_lname" class="form-control" placeholder="Smith">
    </div><br>
    <label for="add_patient_btn" class="col-form-label">First Name</label>
    <div class="col-2">
        <input type="text" id="add_fname" class="form-control" placeholder="Bob">
    </div>
